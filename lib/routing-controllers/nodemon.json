{
    "watch": [
        "src",
        ".env"
    ],
    "ext": "js,ts,json",
    "verbose": true,
    "delay": "1000",
    "ignore": [
        "src/logs/*",
        "src/views/**/*.*",
        "sampleData/*",
        "src/**/*.{spec,test}.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register --transpile-only src/server.ts"
}